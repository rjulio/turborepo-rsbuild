{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["PUBLIC_HOST", "PUBLIC_REMOTE_1", "PUBLIC_REMOTE_2"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
